    "version": "0.2.0",
    "configurations": [
        {
            "name": "mocha",
            "program": "${workspaceFolder}/node_modules/mocha/lib/cli/cli.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "CLI",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/bin/gdal_calc.js",
            "args": [
                "-i",
                "test/data/dem_azimuth50_pa.img",
                "-o",
                "temp.tiff",
                "-f",
                "GTiff",
                "-t",
                "Float64",
                "-c",
                "a + 1",
                "-j",
                "-n",
                "0"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}